@{
    ViewBag.Title = "Takip";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<!-- Stil tanımlamaları -->
<style>
    body {
        background-color: #f4f6f9; /* Hafif nötr bir arka plan rengi */
        font-family: 'Roboto', sans-serif; /* Modern ve okunabilir yazı tipi */
    }

    .container-custom {
        margin-top: 4rem; /* Yukarıdan boşluk bırak */
        padding: 2rem;
        background-color: #ffffff; /* Beyaz arka plan */
        border-radius: 15px; /* Yuvarlatılmış köşeler */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Hafif gölge */
    }

    h3 {
        font-size: 2rem;
        font-weight: bold;
        color: #032541; /* Koyu metin rengi */
        text-align: center;
        margin-bottom: 2rem; /* Başlık altında boşluk */
    }

    .form-select {
        font-size: 1.1rem;
        padding: 0.75rem;
        border-radius: 10px; /* Daha yuvarlak köşeler */
        border: 1px solid #032541;
        transition: border-color 0.3s ease;
    }

        .form-select:focus {
            border-color: #032541; /* Odaklanıldığında form kenar rengi */
            outline: none; /* Varsayılan odak kenarlığını kaldır */
        }

    .btn-primary {
        background-color: #032541;
        border: none;
        padding: 0.75rem 2rem;
        font-size: 1.2rem;
        color: #ffffff;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #032541;
            transform: translateY(-3px); /* Hover efektinde buton yukarı çıkar */
        }

        .btn-primary i {
            margin-right: 0.5rem; /* İkona sağdan boşluk */
        }

    .mb-3 {
        margin-bottom: 1.5rem; /* Standart alt boşluk */
    }
</style>

<!-- Sayfa İçeriği -->
<div class="container container-custom">
    <div class="mb-3">
        <h3>@ViewBag.birimAd Birimi İçin Çalışan İşlerini Listeleme</h3>
    </div>

    @using (Html.BeginForm("Takip", "Yonetici", FormMethod.Post))
    {
        <div class="mb-3">
            <select class="form-select" name="selectPer" id="selectPer">
                @foreach (var personel in ViewBag.personeller)
                {
                    <option value="@personel.personelId">@personel.personelAdSoyad</option>
                }
            </select>
        </div>

        <div class="mb-3 text-center">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-paper-plane"></i> İşleri Getir
            </button>
        </div>
    }
</div>

<!-- FontAwesome ikonu için eklenmesi gereken script -->
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
