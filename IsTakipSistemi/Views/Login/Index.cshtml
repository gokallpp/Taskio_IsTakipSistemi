@{
    Layout = null;
}

<!doctype html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Taskio</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/sign-in.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Content/image/loggo.png"  type="image/x-png" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <style>
        body {
            background: rgba(240, 240, 240, 0.8); /* Arka plan rengi */
        }

        .form-container {
            background-color: rgba(255, 255, 255, 0.9); /* Form arka planı saydam */
            padding: 2rem; /* İç boşluk */
            border-radius: 8px; /* Köşe yuvarlama */
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1); /* Gölgelendirme efekti */
        }

        h1 {
            font-size: 2.5rem; /* Başlık boyutu */
            font-weight: 700;
            color: #032541; /* Profesyonel mavi renk */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1); /* Yazı gölge efekti */
            letter-spacing: 1px; /* Harfler arası boşluk */
            position: relative;
            display: inline-block;
        }

            h1::after {
                content: '';
                width: 50px;
                height: 4px;
                background-color: #032541;
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                border-radius: 2px;
            }

        .btn-custom {
            background-color: #032541; /* Buton arka plan rengi */
            border: none; /* Kenarlık yok */
            color: #ffffff;
        }

            .btn-custom:hover {
                background-color: #138496; /* Hover durumu için daha koyu bir ton */
            }
    </style>
</head>
<body class="d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signin w-100 m-auto text-center">
        <!-- Logo Ekleme -->
        <img src="~/Content/image/loggo.png" alt="Taskio Logo" class="mb-4" style="max-width: 150px;">

        <div class="form-container">
            <!-- Giriş formu için konteyner -->
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <h1 class="mb-3">Taskio Giriş</h1>
                <br />
                <div class="form-floating">
                    <input type="text" class="form-control" id="kullaniciAd" name="kullaniciAd">
                    <label for="kullaniciAd">Kullanıcı Adı</label>
                </div>
                <br />
                <div class="form-floating">
                    <input type="password" class="form-control" id="parola" name="parola">
                    <label for="parola">Parola</label>
                </div>

                <div class="form-check text-start my-3">
                    <input class="form-check-input" type="checkbox" value="remember-me">
                    <label class="form-check-label" for="flexCheckDefault">
                        Beni Hatırla
                    </label>
                </div>

                <button class="btn btn-custom w-100 py-2" type="submit">Giriş</button>
                <br /> <br />

                if (ViewBag.mesaj != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.mesaj
                    </div>
                }

                <br /> <br />
                <p class="mt-5 mb-3 text-body-secondary">
                    Taskio &copy; @DateTime.Now.Year. Tüm hakları saklıdır.
                    Bu sayfa yalnızca Taskio çalışanları ve yetkili kullanıcılar için tasarlanmıştır.
                </p>
            }
        </div>
    </main>
</body>
</html>
